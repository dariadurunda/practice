import java.util.Random;
import java.util.Scanner;

// ------------------- Class representing a list node -------------------
class Link {
    public int data;
    public Link next;

    public Link(int d) {
        data = d;
        next = null;
    }

    public void displayLink() {
        System.out.print(data + " ");
    }
}

// ------------------- Singly Linked List -------------------
class LinkList {
    private Link first;

    public LinkList() {
        first = null;
    }

    public boolean isEmpty() {
        return (first == null);
    }

    // Insert at the beginning
    public void insertFirst(int d) {
        Link newLink = new Link(d);
        newLink.next = first;
        first = newLink;
    }

    // Fill the list with random values
    public void fillRandom(int count) {
        Random rand = new Random();
        for (int i = 0; i < count; i++) {
            insertFirst(rand.nextInt(100)); // from 0 to 99
        }
    }

    // Display a certain number of elements
    public void display(int count) {
        Link current = first;
        int i = 0;
        while (current != null && i < count) {
            current.displayLink();
            current = current.next;
            i++;
        }
        System.out.println();
    }

    // Find an element by key
    public Link find(int key) {
        Link current = first;
        while (current != null && current.data != key) {
            current = current.next;
        }
        return current;
    }

    // Delete an element by key
    public Link delete(int key) {
        Link current = first;
        Link previous = first;

        while (current != null && current.data != key) {
            previous = current;
            current = current.next;
        }

        if (current == null)
            return null;

        if (current == first)
            first = first.next;
        else
            previous.next = current.next;

        return current;
    }
}

// ------------------- Linked list with first and last references -------------------
class FirstLastList {
    private Link first;
    private Link last;

    public FirstLastList() {
        first = null;
        last = null;
    }

    public boolean isEmpty() {
        return first == null;
    }

    public void insertLast(int d) {
        Link newLink = new Link(d);
        if (isEmpty())
            first = newLink;
        else
            last.next = newLink;
        last = newLink;
    }

    // Replace the last element's value
    public void replaceLast(int newValue) {
        if (!isEmpty() && last != null) {
            last.data = newValue;
        }
    }

    // Insert a new element after a given key
    public boolean insertAfter(int key, int newValue) {
        Link current = first;
        while (current != null && current.data != key) {
            current = current.next;
        }

        if (current == null)
            return false;

        Link newLink = new Link(newValue);
        newLink.next = current.next;
        current.next = newLink;

        if (current == last)
            last = newLink;

        return true;
    }

    public void display() {
        Link current = first;
        while (current != null) {
            current.displayLink();
            current = current.next;
        }
        System.out.println();
    }
}

// ------------------- Queue based on linked list -------------------
class LinkQueue {
    private FirstLastList theList;

    public LinkQueue() {
        theList = new FirstLastList();
    }

    public boolean isEmpty() {
        return theList.isEmpty();
    }

    public void insert(int d) {
        theList.insertLast(d);
    }

    public void displayQueue() {
        System.out.print("Queue: ");
        theList.display();
    }
}

// ------------------- Main class -------------------
public class laboratorna_6 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // ==== 1. Test for simple linked list ====
        LinkList list = new LinkList();

        System.out.
                print("How many elements to insert into the list? ");
        int n = sc.nextInt();

        list.fillRandom(n);
        System.out.print("List: ");
        list.display(n);

        System.out.print("Enter a value to search: ");
        int key = sc.nextInt();
        Link found = list.find(key);
        System.out.println(found != null ? "Element found: " + key : "Element not found.");

        System.out.print("Enter a value to delete: ");
        int del = sc.nextInt();
        Link deleted = list.delete(del);
        System.out.println(deleted != null ? "Element deleted: " + del : "Element not found for deletion.");
        System.out.print("List after deletion: ");
        list.display(n);

        // ==== 2. Test for FirstLastList ====
        FirstLastList flList = new FirstLastList();
        flList.insertLast(10);
        flList.insertLast(20);
        flList.insertLast(30);
        System.out.print("Initial list: ");
        flList.display();

        flList.replaceLast(99);
        System.out.print("After replacing last element: ");
        flList.display();

        flList.insertAfter(20, 77);
        System.out.print("After inserting after 20: ");
        flList.display();

        // ==== 3. Test for queue ====
        LinkQueue queue = new LinkQueue();
        queue.insert(5);
        queue.insert(15);
        queue.insert(25);
        queue.displayQueue();

        System.out.println("Program finished.");
    }
}
